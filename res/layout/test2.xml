<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="ФИО"
            android:id="@+id/textView"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="25dp"
            android:textColor="@color/tvBlue_color"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/person"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Иванов Иван Иванович"
                android:id="@+id/textView2"
                />
    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Номер телефона"
            android:id="@+id/textView3"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="25dp"
            android:textColor="@color/tvBlue_color"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/phone"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+7924234434"
                android:id="@+id/textView4"
                android:linksClickable="true"/>
    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="e-Mail"
            android:id="@+id/textView5"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="25dp"
            android:textColor="@color/tvBlue_color"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@drawable/mail"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ivanov@gmail.com"
                android:id="@+id/textView6"
                android:linksClickable="true"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Дата рождения: "
                android:id="@+id/textView7"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="25dp"
                android:textColor="@color/tvBlue_color"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Пол:"
                android:id="@+id/textView9"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="25dp"
                android:textColor="@color/tvBlue_color"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:src="@drawable/birthday"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01.01.2000"
                android:id="@+id/textView8"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:src="@drawable/gender"
                android:layout_marginLeft="65dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="муж."
                android:id="@+id/textView10"/>
    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Должность:"
            android:id="@+id/textView11"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="25dp"
            android:textColor="@color/tvBlue_color"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView6"
                android:src="@drawable/job"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Java development"
                android:id="@+id/textView12"/>
    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Зарплата:"
            android:id="@+id/textView13"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="25dp"
            android:textColor="@color/tvBlue_color"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView7"
                android:src="@drawable/wallet"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20000 eur."
                android:id="@+id/textView14"/>
    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ответ соискателю:"
            android:id="@+id/textView15"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="25dp"
            android:textColor="@color/tvBlue_color"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_gravity="left|center_vertical"
            android:minLines="5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отправить"
            android:id="@+id/button"
            android:layout_gravity="center"/>

</LinearLayout>